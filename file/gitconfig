[user]
	name = tzing
	email = tzingshih@gmail.com

[core]
	pager = delta
	editor = nvim

[init]
	defaultBranch = trunk

[filter "lfs"]
	process = git-lfs filter-process
	required = true
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f

[color]
	ui = true

[color "diff"]
	meta = yellow
	frag = magenta bold
	commit = yellow bold
	old = red bold
	new = green bold
	oldMoved = red dim
	newMoved = green dim
	whitespace = red reverse

[diff]
	colorMoved = zebra

[pull]
	ff = only
	prune = true

[fetch]
	prune = true

[ilog]
	format = %C(auto)%h%d %s %C(dim green)%cr%C(reset)

[alias]
	tree = ilog --all

[url "git@github.com:"]
	insteadOf = https://github.com/

[delta]
	file-style = yellow
	file-decoration-style = yellow underline

	hunk-label = @@
	hunk-header-file-style = magenta bold
	hunk-header-line-number-style = magenta dim
	hunk-header-style = file line-number brightblack
	hunk-header-decoration-style = hidden

	keep-plus-minus-markers = true

	plus-style = green bold
	plus-emph-style = green reverse

	minus-style = red dim
	minus-emph-style = red reverse

	syntax-theme = base16

	blame-timestamp-output-format = %F %H:%M:%S %z
	blame-code-style = syntax
